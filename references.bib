@article{vazsonyi_its_2017,
	title = {It's time: {A} meta-analysis on the self-control-deviance link},
	volume = {48},
	issn = {00472352},
	shorttitle = {It's time},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S004723521630099X},
	doi = {10.1016/j.jcrimjus.2016.10.001},
	abstract = {Purpose: The current meta-analysis examines the link between self-control and measures of crime and deviance, taking stock of the empirical status of self-control theory and focusing on work published between 2000 and 2010.
