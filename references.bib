	journal = {International Journal of Drug Policy},
	author = {Friedman, Joseph and Syvertsen, Jennifer L. and Bourgois, Philippe and Bui, Alex and Beletsky, Leo and Pollini, Robin},
	month = jan,
	year = {2021},
	keywords = {Intersectionality, Mixed Methods, People who inject drugs, Police violence, Policing, Structural vulnerability},
	pages = {102981},
}

