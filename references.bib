@article{byrd_maoa_2014,
	title = {{MAOA}, {Childhood} {Maltreatment}, and {Antisocial} {Behavior}: {Meta}-analysis of a {Gene}-{Environment} {Interaction}},
	volume = {75},
	issn = {00063223},
	shorttitle = {{MAOA}, {Childhood} {Maltreatment}, and {Antisocial} {Behavior}},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0006322313004125},
	doi = {10.1016/j.biopsych.2013.05.004},
	abstract = {Background: In a seminal study of gene-environment interaction, childhood maltreatment predicted antisocial behavior more strongly in male subjects carrying an MAOA promoter variant of lesser, compared with higher, transcriptional efﬁciency. Many further investigations have been reported, including studies of other early environmental exposures and female subjects. Here, we report a meta-analysis of studies testing the interaction of MAOA genotype and childhood adversities on antisocial outcomes in predominantly nonclinical samples.
